{
  "plugins": [
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-console": 0,
    "semi": [
      "error",
      "always"
    ]
  },
  "env": {
    "mocha":true
  }
}
